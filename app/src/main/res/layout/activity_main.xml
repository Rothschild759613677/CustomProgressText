<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moonsky="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.moonsky.customprogresstext.MainActivity">

    <com.moonsky.customprogresstext.CustomProgress
        android:id="@+id/customProgressText"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        moonsky:circleArcColor="@color/colorAccent"
        moonsky:circleArcWidth="20dp"
        moonsky:circleColor="@color/colorPrimary"
        moonsky:fontColor="@color/colorAccent"
        moonsky:fontSize="20sp"
        moonsky:maxProgress="100"
        moonsky:startAngle="-45"/>

</RelativeLayout>
